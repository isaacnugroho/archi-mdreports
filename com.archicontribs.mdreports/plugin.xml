<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:report_menu?after=report_ext">
         <command
               commandId="com.archicontribs.mdreports.command.Markdown"
               id="com.archicontribs.mdreports.menuItem.Markdown"
               label="%action.label"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:tools">
         <separator
               name="com.archicontribs.mdreports.separator1"
               visible="true">
         </separator>
         <command
               commandId="com.archicontribs.mdreports.command.PreviewMarkdown"
               id="com.archicontribs.mdreports.menuItem.PreviewMarkdown"
               label="%command.label.0"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="popup:com.archimatetool.editor.treeModelView?after=com.archimatetool.hammer.popup.separator">
         <command
               commandId="com.archicontribs.mdreports.command.PreviewMarkdown"
               id="com.archicontribs.mdreports.popupmenu.PreviewMarkdown"
               label="%command.label.0"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="com.archimatetool.editor.category"
            description="%command.label"
            id="com.archicontribs.mdreports.command.Markdown"
            name="%command.label">
      </command>
      <command
            categoryId="com.archimatetool.editor.category"
            description="%command.label.0"
            id="com.archicontribs.mdreports.command.PreviewMarkdown"
            name="%command.label.0">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.archicontribs.mdreports.markdown.MarkdownReportHandler"
            commandId="com.archicontribs.mdreports.command.Markdown">
         <enabledWhen>
            <reference
                  definitionId="com.archimatetool.modelEnabled">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
</plugin>
